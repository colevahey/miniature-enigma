#!/usr/bin/env python3

import letters as le
import json
import sys
import skilstak.colors as c
import message as me
from os import system

def run():
    with open('letters.json', 'r') as pfile:
        j=json.load(pfile)
        #le.Letter.a=j['a']
    inverse = {y:x for x,y in j.items()}
    message = input(c.clear + c.red + "What is your message? >> " + c.orange)
    n=1
    final = ""
    if message == "m":
        while n < len(me.text):
            final += inverse[me.text[n]]
            n += 1
    elif message.startswith("#"):
        while n < len(message):
            final += inverse[message[n]]
            n += 1
    else:
        n = 0
        final += "#"
        while n < len(message):
            final += j[message[n]]
            n += 1
        system('''echo 'text = "''' + final + '''"' >> message.py''')
    print(final)

if __name__=='__main__':
    run()
