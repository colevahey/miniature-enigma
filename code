#!/usr/bin/env python3

import random
import letters as le
import save
import skilstak.colors as colors

def main():
    letters = ["a","b","c","d","e","f","g","h","i","j","k","l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"]
    a = random.choice(letters)
    le.Letter.a=a
    le.Letter.A=a.title()
    letters.remove(a)
    b = random.choice(letters)
    le.Letter.b=b
    le.Letter.B=b.title()
    letters.remove(b)
    c = random.choice(letters)
    le.Letter.c=c
    le.Letter.C=c.title()
    letters.remove(c)
    d = random.choice(letters)
    le.Letter.d=d
    le.Letter.D=d.title()
    letters.remove(d)
    e = random.choice(letters)
    le.Letter.e=e
    le.Letter.E=e.title()
    letters.remove(e)
    f = random.choice(letters)
    le.Letter.f=f
    le.Letter.F=f.title()
    letters.remove(f)
    g = random.choice(letters)
    le.Letter.g=g
    le.Letter.G=g.title()
    letters.remove(g)
    h = random.choice(letters)
    le.Letter.h=h
    le.Letter.H=h.title()
    letters.remove(h)
    i = random.choice(letters)
    le.Letter.i=i
    le.Letter.I=i.title()
    letters.remove(i)
    j = random.choice(letters)
    le.Letter.j=j
    le.Letter.J=j.title()
    letters.remove(j)
    k = random.choice(letters)
    le.Letter.k=k
    le.Letter.K=k.title()
    letters.remove(k)
    l = random.choice(letters)
    le.Letter.l=l
    le.Letter.L=l.title()
    letters.remove(l)
    m = random.choice(letters)
    le.Letter.m=m
    le.Letter.M=m.title()
    letters.remove(m)
    n = random.choice(letters)
    le.Letter.n=n
    le.Letter.N=n.title()
    letters.remove(n)
    o = random.choice(letters)
    le.Letter.o=o
    le.Letter.O=o.title()
    letters.remove(o)
    p = random.choice(letters)
    le.Letter.p=p
    le.Letter.P=p.title()
    letters.remove(p)
    q = random.choice(letters)
    le.Letter.q=q
    le.Letter.Q=q.title()
    letters.remove(q)
    r = random.choice(letters)
    le.Letter.r=r
    le.Letter.R=r.title()
    letters.remove(r)
    s = random.choice(letters)
    le.Letter.s=s
    le.Letter.S=s.title()
    letters.remove(s)
    t = random.choice(letters)
    le.Letter.t=t
    le.Letter.T=t.title()
    letters.remove(t)
    u = random.choice(letters)
    le.Letter.u=u
    le.Letter.U=u.title()
    letters.remove(u)
    v = random.choice(letters)
    le.Letter.v=v
    le.Letter.V=v.title()
    letters.remove(v)
    w = random.choice(letters)
    le.Letter.w=w
    le.Letter.W=w.title()
    letters.remove(w)
    x = random.choice(letters)
    le.Letter.x=x
    le.Letter.X=x.title()
    letters.remove(x)
    y = random.choice(letters)
    le.Letter.y=y
    le.Letter.Y=y.title()
    letters.remove(y)
    z = random.choice(letters)
    le.Letter.z=z
    le.Letter.Z=z.title()
    letters.remove(z)
    print(colors.clear + colors.red + "Code:\n" + colors.multi(a+b+c+d+e+f+g+h+i+j+k+l+m+n+o+p+q+r+s+t+u+v+w+x+y+z))
